/* ---------- HEADER ANIMATION ---------- */

.services-header {
  text-align: center;
  margin-bottom: 60px;

  opacity: 0;
  transform: translateY(40px) rotate(-6deg);
  transition: 0.8s cubic-bezier(.22,.61,.36,1);
}

.services-header.visible {
  opacity: 1;
  transform: translateY(0) rotate(0);
