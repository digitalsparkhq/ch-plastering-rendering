<style>
.cta {
  position: relative;
  background-image: url('/images/cta.jpg');
  background-size: cover;
  background-position: center;
  padding: 80px 0;
  color: white;
}

.cta-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.6);
}

.cta-content {
  position: relative;
  z-index: 2;
  text-align: center;
  max-width: 700px;
  margin: auto;
}

.cta h2 {
  font-size: 36px;
  margin-bottom: 20px;
}

.cta p {
  margin-bottom: 30px;
  font-size: 18px;
}

/* ---------- CTA FADE UP ANIMATION ---------- */

.cta-content {
  position: relative;
  z-index: 2;
  text-align: center;
  max-width: 700px;
  margin: auto;

  opacity: 0;
  transform: translateY(50px);
  transition: 0.8s cubic-bezier(.22,.61,.36,1);
}

.cta-content.visible {
  opacity: 1;
  transform: translateY(0);
}
</style>

<section class="cta section-small">

  <div class="cta-overlay"></div>

  <div class="container cta-content">
    <h2>Need Professional Plastering Work?</h2>
    <p>Contact us today for a free quote and expert advice.</p>
    <a class="btn-primary" href="/contact">Get a Free Quote</a>
  </div>

</section>

<script>
  const ctaObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, { threshold: 0.3 });

  const cta = document.querySelector('.cta-content');
  if (cta) ctaObserver.observe(cta);
</script>